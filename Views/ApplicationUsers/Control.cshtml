@model ApplicationUser
@{
    ViewData["title"] = "إدارة الموقع";
}
<div class="row">
    <div class="col-lg-12">
        <div class="row justify-content-center p-2 ml-1">
            <a asp-action="Index" asp-controller="Fatwas" class="border">
                <div class="card mr-1 mt-1 mb-1" style="width: 12rem;height:12rem">
                    <div class="card-body text-center">
                        <span class="fa text-info fa-list fa-5x"></span>
                        <h6 class="card-title text-dark">الفتاوى</h6>
